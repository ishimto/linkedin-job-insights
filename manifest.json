{
  "manifest_version": 3,
  "name": "LinkedIn Jobs Extension",
  "version": "1.0.1",
  "description": "Adds extensions features to LinkedIn",
  "permissions": [
    "cookies",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "LinkedIn Jobs Extension"
  }
}

